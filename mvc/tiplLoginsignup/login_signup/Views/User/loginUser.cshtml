@model login_signup.Models.Loginmodel

@{
    ViewBag.Title = "loginUser";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div id="main-container" class="main-container">
    <div id="inner-container" class="inner-container">

        <div id="middle">
            <section class="common-section collegebol-predictor-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="cmn-heading">Welcome to Tathya Infotech, Please Sign In!</h1> <br><br>

                        </div>
                        <div class="col-md-12">
                            <div class="register-step-cnt">
                                <div class="register-steps-area">
                                    <ul>
                                        <li class="completed"><span>1</span></li>
                                        <li class="completed"><span>2</span></li>
                                        
                                        <li class="active"><span>3</span></li>

                                    </ul>
                                </div>
                                </div></div>
                                <div class="col-md-6">
                                    <div class="login-cnt">
                                        <div class="login-heading">
                                            <h2><img src="~/content/images/login-icon.png"> Login <span>If you alreday registered with us. Please Login here.</span></h2>
                                        </div>

                                        <div class="login-form-area">
                                            <div class="form-row">
                                                <div class="form-label">Email Id:</div>
                                                <div class="form-cnt-area">
                                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="clear"></div>
                                            </div>

                                            <div class="form-row">
                                                <div class="form-label">Password:</div>
                                                <div class="form-cnt-area">
                                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="clear"></div>
                                            </div>


                                            <div class="form-row">
                                                <div class="form-label"></div>
                                                <div class="form-cnt-area">
                                                    <label class="custom-checkbox">
                                                        <input type="checkbox">
                                                        <span class="checkmark"></span> Remember Me
                                                    </label>
                                                </div>
                                                <div class="clear"></div>
                                            </div>
                                            @ViewBag.msg
                                            <div class="form-row">
                                                <div class="form-label"></div>
                                                <div class="form-cnt-area"><a href="#"><input type="submit" value="Create" class="cmn-btn" /></a></div>
                                                <div class="clear"></div>
                                            </div>
                                            <br>
                                            <div class="form-row">
                                                <div class="form-label"></div>
                                                <div class="form-cnt-area"><a href="#" class="cmn-link"><strong>Forgot your password?</strong></a></div>
                                                <div class="clear"></div>
                                            </div>

                                        </div>

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="signup-cnt">
                                        <div class="login-heading">
                                            <h2><img src="~/content/images/singup-icon.png"> Sign Up <span>New User? Join the Community! </span></h2>
                                        </div>

                                        <div class="register-cnt-area">
                                            <p>Signup & get instant updates on special offers & latest discounts.</p>
                                            <p>Avail welcome perks worth up to 30% discount on your first purchase.</p>
                                            <p>Refer a friend & get surprise rewards.</p>

                                            <div class="text-center"><a href="../User/CreateRegister" class="cmn-btn">Register</a></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="social-btn">
                                        <span><a href="#"><img src="~/content/images/social-fb.png"></a></span><span><a href="#"><img src="~/content/images/social-gmail.png"></a></span>
                                    </div>
                                </div>
                            </div>
                        </div>


</section>


        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


