@model List<onlineSite.Models.category>
@{
    ViewBag.Title = "categoty";
    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}

<h2>categoty</h2>
 
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Category Details

    </div>
    <a class="nav-link" href="../Admin/AddCategory">
        <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
        Add New
    </a>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Category Id</th>
                    <th>Category Name</th>
                    <th>ParentId</th>
                    <th>Status</th>

                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Category Id</th>
                    <th>Category Name</th>
                    <th>ParentId</th>
                    <th>Status</th>
                    <th>Action</th>

                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.category_id</td>
                        <td>@item.category_name</td>
                        <td>@item.parent_category_id</td>
                        <td>@item.category_status</td>
                        <td><a href="#">Edit</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>